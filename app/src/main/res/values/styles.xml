    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorLightBlack</item>
        <item name="colorControlActivated">@color/colorOrange</item>
    </style>

    <style name="superBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Additionally if you want animations when dialog opening -->
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="Transparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="CustomTextView">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">8dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/ripple_rectangle</item>
        <item name="android:onClick">onConjunctClick</item>

    </style>


    <style name="CustomRadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!--    <style name="CustomImageView">
        <item name="android:background">@drawable/image_bg</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:elevation">5dp</item>
    </style>-->

    <style name="CustomButton">
        <item name="android:background">@drawable/ripple_rectangle</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="CustomText">
        <item name="android:textSize">25sp</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="Widget.GifView" parent="@android:style/Widget" />
    <!--For GifView Declaration-->
    <style name="MyTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyTabTextAppearance</item>
    </style>


    <style name="MyTabTextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
    </style>


    <style name="DialogSlideAnim" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <declare-styleable name="RoundedHorizontalProgress">
        <attr name="backgroundColor" format="color" />
        <attr name="progressColor" format="color" />
        <attr name="isRounded" format="boolean" /> <!-- Default Value is true(Rounded) -->
    </declare-styleable>

    <declare-styleable name="DonutProgress">
        <attr name="donut_progress" format="integer" />
        <attr name="donut_max" format="integer" />
        <attr name="donut_unfinished_color" format="color" />
        <attr name="donut_finished_color" format="color" />
        <attr name="donut_finished_stroke_width" format="dimension" />
        <attr name="donut_unfinished_stroke_width" format="dimension" />
        <attr name="donut_text_size" format="dimension" />
        <attr name="donut_text_color" format="color" />
        <attr name="donut_text" format="string" />
        <attr name="donut_prefix_text" format="string" />
        <attr name="donut_suffix_text" format="string" />
        <attr name="donut_background_color" format="color" />
    </declare-styleable>
    <style name="CustomQuestionImageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:src">@drawable/warning</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="CustomQuestionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:text">Question</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FullScreenCustomDialogStyle" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>
    <style name="yellow_button">
        <item name="android:layout_marginEnd">@dimen/_50sdp</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:elevation">@dimen/_3sdp</item>
        <item name="android:layout_marginStart">@dimen/_50sdp</item>
        <item name="android:background">@drawable/button_yellow</item>
    </style>
    <style name="submitbtn">
        <item name="android:layout_marginStart">@dimen/_8sdp</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:elevation">@dimen/_3sdp</item>
        <item name="android:background">@drawable/button_green</item>
    </style>
    <style name="capturebtn">
        <item name="android:layout_marginStart">@dimen/_5sdp</item>
        <item name="android:layout_marginEnd">@dimen/_5sdp</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:elevation">@dimen/_3sdp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@drawable/button_green</item>
        <item name="android:src">@drawable/ic_photo_camera_black</item>
    </style>
    <style name="question">
        <item name="android:background">@drawable/dialog_bg</item>
        <item name="android:layout_margin">@dimen/_10sdp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:padding"> @dimen/_15sdp</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:color">@color/colorText</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="tittle">
        <item name="android:layout_marginStart">60dp</item>
        <item name="android:layout_marginEnd">60dp</item>
        <item name="android:padding"> @dimen/_5sdp</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:color">@color/colorText</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="paragraph">
        <item name="android:background">@drawable/trans_dialog_bg</item>
        <item name="android:elevation">5dp</item>
        <item name="android:padding"> @dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="ExitDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/ExitDialogAnimation</item>
    </style>

    <style name="ExitDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_bounce_animation</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>
</resources>
