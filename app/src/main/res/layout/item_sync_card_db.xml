    <LinearLayout
        android:id="@+id/ll_all_dbstats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stat_date"
        android:layout_marginTop="@dimen/_4sdp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:layout_weight="1">

            <com.pratham.foundation.customView.fontsview.SansTextViewBold
                android:id="@+id/tv_scorecount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/goodColornew"
                android:textSize="@dimen/_12sdp"
                tools:ignore="HardcodedText" />

            <com.pratham.foundation.customView.fontsview.SansTextView
                android:id="@+id/tv_scorecount_lbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_scorecount"
                android:text="@string/Score_Count"
                android:textAlignment="center"
                android:textColor="@color/goodColornew"
                android:textSize="@dimen/_12sdp"
                tools:ignore="HardcodedText" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_course"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_weight="1">

            <com.pratham.foundation.customView.fontsview.SansTextViewBold
                android:id="@+id/tv_coursecount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/goodColornew"
                android:textSize="@dimen/_12sdp"
                tools:ignore="HardcodedText" />

            <com.pratham.foundation.customView.fontsview.SansTextView
                android:id="@+id/tv_coursecount_lbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_coursecount"
                android:text="@string/course_count"
                android:textAlignment="center"
                android:textColor="@color/goodColornew"
                android:textSize="@dimen/_12sdp"
                tools:ignore="HardcodedText" />
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout></com.google.android.material.card.MaterialCardView>