<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_img"
    android:layout_width="280dp"
    android:layout_height="280dp"
    android:padding="4dp">

    <com.pratham.foundation.customView.shape_of_view.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        app:sl_shadow_angle="30"
        app:sl_shadow_color="@color/colorBlackTransparentLight"
        app:sl_shadow_distance="4dp"
        app:sl_shadow_radius="5dp"
        app:sl_shadowed="true">

    <ImageView
        android:id="@+id/img_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    </com.pratham.foundation.customView.shape_of_view.ShadowLayout>

    <ImageView
        android:id="@+id/play"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:elevation="3dp"
        android:src="@drawable/ic_speaker_black" />
    <RelativeLayout
        android:layout_below="@id/play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingStart="@dimen/_2sdp"
        android:paddingEnd="@dimen/_2sdp"
        android:layout_centerInParent="true">
            <com.pratham.foundation.customView.fontsview.SansTextViewBold
                android:id="@+id/hindiText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:duplicateParentState="true"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:singleLine="true"
                android:textColor="@color/red"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />
            <com.pratham.foundation.customView.fontsview.SansTextViewBold
                android:id="@+id/englishText"
                android:layout_below="@+id/hindiText"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:layout_marginTop="@dimen/_3sdp"
                android:textColor="@color/blue"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:layout_margin="@dimen/_10sdp"
        android:id="@+id/remove"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentBottom="true"
        android:elevation="3dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:src="@drawable/ic_close_red" />
</RelativeLayout>