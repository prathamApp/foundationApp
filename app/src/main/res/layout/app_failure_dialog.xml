<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_200sdp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_margin="@dimen/_12sdp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="error_cross.json"
        app:lottie_loop="true" />

    <com.pratham.foundation.customView.fontsview.SansTextViewBold
        android:id="@+id/dia_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_12sdp"
        android:gravity="center"
        android:text="You have selected wrong Answer right ans is"
        android:textColor="@android:color/holo_red_light"
        android:textSize="@dimen/_14sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:textStyle="bold" />
    <com.pratham.foundation.customView.fontsview.SansTextView
        android:id="@+id/correctAns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_14sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:textColor="@color/colorSignBoard"
        android:text="correct ans is"/>
    <com.pratham.foundation.customView.fontsview.SansButton
        android:id="@+id/dia_btn_yellow"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_toLeftOf="@id/dia_btn_green"
        android:background="@drawable/button_yellow"
        android:elevation="5dp"
        android:text="ok"
        android:visibility="visible"
        android:textColor="@color/white"
        android:textSize="@dimen/_10sdp" />

</LinearLayout>