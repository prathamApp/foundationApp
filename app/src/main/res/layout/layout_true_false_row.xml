<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stylebg2"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_2sdp"
        android:background="@null"
        android:orientation="vertical">

        <com.pratham.foundation.customView.fontsview.SansTextView
            android:id="@+id/tv_question"
            style="@style/CustomQuestionStyle"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="0.5" />

        <ImageView
            android:id="@+id/iv_question_image"
            style="@style/CustomQuestionImageStyle" />

        <com.pratham.foundation.customView.GifView
            android:id="@+id/iv_question_gif"
            style="@style/CustomQuestionImageStyle"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.5" />

        <RadioGroup
            android:id="@+id/rg_true_false"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/_10sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/rb_true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/custom_radio_button"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="True"
                android:textSize="@dimen/_15sdp" />

            <Button
                android:id="@+id/rb_false"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/custom_radio_button"
                android:padding="@dimen/_10sdp"
                android:text="False"
                android:textSize="@dimen/_15sdp" />
        </RadioGroup>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".4"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal">

            <com.pratham.foundation.customView.fontsview.SansButton
                android:id="@+id/previous"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:background="@drawable/button_red"
                android:text="previous" />

            <com.pratham.foundation.customView.fontsview.SansButton
                android:id="@+id/submitBtn"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:textColor="@color/white"
                android:background="@drawable/button_green"
                android:layout_centerInParent="true"
                android:text="Submit" />

            <com.pratham.foundation.customView.fontsview.SansButton
                android:id="@+id/next"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:textColor="@color/white"
                android:background="@drawable/button_yellow"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:text="next" />

        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>