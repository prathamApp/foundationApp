<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/certificate_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:elevation="@dimen/_3sdp"
    android:background="@drawable/ripple_rectangle_card">

    <ImageView
        android:id="@+id/gameIcon"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentTop="true"
        android:background="@drawable/dialog_image_bg"
        android:elevation="5dp"
        android:padding="@dimen/_8sdp"
        android:layout_margin="@dimen/_10sdp"
        android:src="@drawable/think" />

    <com.pratham.foundation.customView.fontsview.SansButton
        android:id="@+id/play"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_yellow"
        android:layout_marginRight="@dimen/_10sdp"
        android:text="play"
        android:textColor="@color/white" />

    <com.pratham.foundation.customView.fontsview.SansTextView
        android:id="@+id/gameName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/gameIcon"
        android:layout_toLeftOf="@id/play"
        android:gravity="center"
        android:padding="@dimen/_7sdp"
        android:text="Student Knows "
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold" />
</RelativeLayout>