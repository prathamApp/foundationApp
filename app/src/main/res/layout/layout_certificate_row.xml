<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/certi_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_list_card_bg"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_3sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:elevation="@dimen/_3sdp"
    android:padding="@dimen/_10sdp">

    <RelativeLayout
        android:id="@+id/rl_assess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/tv_view">

        <com.pratham.foundation.customView.fontsview.SansTextViewBold
            android:id="@+id/tv_assessment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="word"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/_16sdp" />

        <com.pratham.foundation.customView.fontsview.SansTextViewBold
            android:id="@+id/tv_timestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_assessment"
            android:text="timestamp"
            android:textColor="@color/colorBtnRedLight"
            android:textSize="@dimen/_10sdp" />
    </RelativeLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/tv_view"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        app:lottie_autoPlay="true"
        app:lottie_fileName="eye_lottie.json"
        app:lottie_loop="true" />

<!--    <com.pratham.foundation.customView.fontsview.SansTextViewBold
        android:id="@+id/tv_view"
        android:layout_width="@dimen/_55sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_green"
        android:elevation="@dimen/_2sdp"
        android:gravity="center"
        android:layout_margin="@dimen/_3sdp"
        android:paddingVertical="@dimen/_5sdp"
        android:text="@string/Open"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp" />-->

</RelativeLayout>
