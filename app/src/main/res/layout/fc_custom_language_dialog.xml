<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="@dimen/_240sdp"
        android:layout_height="@dimen/_220sdp"
        android:layout_centerInParent="true"
        android:background="@color/full_transparent">

        <ImageView
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:elevation="5dp"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:background="@drawable/dialog_image_bg"
            android:src="@drawable/language_icon" />

        <ImageButton
            android:id="@+id/dia_btn_cross"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:elevation="5dp"
            android:layout_marginTop="@dimen/_30sdp"
            android:padding="5dp"
            android:visibility="gone"
            android:background="@drawable/button_red"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_close_red" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_45sdp"
            android:layout_marginBottom="@dimen/_35sdp"
            android:background="@drawable/dialog_bg">

            <com.pratham.foundation.customView.fontsview.SansTextViewBold
                android:id="@+id/dia_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_19sdp"
                android:gravity="center"
                android:lines="2"
                android:visibility="visible"
                android:paddingHorizontal="@dimen/_7sdp"
                android:text="Select Certificate Language"
                android:textColor="@color/gradianceCardStartColor"
                android:textSize="@dimen/_15sdp" />

            <Spinner
                android:id="@+id/lang_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dia_title"
                android:paddingHorizontal="@dimen/_2sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:background="@drawable/gradient_spinner"
                android:popupBackground="@drawable/choose_level_bg"
                android:visibility="visible" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_5sdp"
            android:gravity="center"
            android:elevation="5dp">

            <com.pratham.foundation.customView.fontsview.SansButton
                android:id="@+id/dia_btn_yellow"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_toLeftOf="@id/dia_btn_green"
                android:background="@drawable/button_yellow"
                android:elevation="5dp"
                android:text="yellow"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />

            <com.pratham.foundation.customView.fontsview.SansButton
                android:id="@+id/dia_btn_green"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="@drawable/button_green"
                android:elevation="5dp"
                android:text="green"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />

            <com.pratham.foundation.customView.fontsview.SansButton
                android:id="@+id/dia_btn_red"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_toRightOf="@id/dia_btn_green"
                android:background="@drawable/button_red"
                android:elevation="5dp"
                android:text="red"
                android:textColor="@color/white"
                android:visibility="gone"
                android:textSize="@dimen/_10sdp" />


        </RelativeLayout>

        <ImageButton
            android:id="@+id/exit_ib"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentRight="true"
            android:background="@color/full_transparent"
            android:padding="@dimen/_3sdp"
            android:scaleType="fitCenter"
            android:src="@drawable/credits_icon"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>