<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/group_card"
    android:layout_height="@dimen/_120sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:layout_marginStart="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_5sdp"
    app:cardElevation="@dimen/_4sdp"
    app:cardBackgroundColor="@color/ghost_white"
    app:cardCornerRadius="@dimen/_10sdp">

    <RelativeLayout
        android:id="@+id/rl_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.pratham.foundation.customView.fontsview.SansTextViewBold
            android:id="@+id/group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Colors and Shape"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/_12sdp" />
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_grp"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@android:color/transparent"
            android:layout_alignParentBottom="true"
            app:actualImageScaleType="centerInside"
            app:placeholderImage="@drawable/ic_grp_btn"/>

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>