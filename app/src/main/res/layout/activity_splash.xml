<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFEFE"
    tools:context="com.pratham.foundation.ui.splash_activity.SplashActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_splash_bkgd" />

    <ImageView
        android:id="@+id/iv_pratham_logo"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter"
        android:src="@drawable/pratham_logo" />

    <com.hanks.htextview.typer.TyperTextView
        android:id="@+id/tv_typer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_70sdp"
        android:gravity="center"
        android:lineSpacingMultiplier="1"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/_30sdp"
        android:visibility="gone"
        app:charIncrease="1"
        app:typerSpeed="100" />

</RelativeLayout>