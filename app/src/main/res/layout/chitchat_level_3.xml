<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_convo_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_bkgd"
    android:elevation="@dimen/_5sdp"
    android:orientation="vertical">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floating_back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floating_info"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/silence_outer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_20"
        android:elevation="50dp"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/silence_main_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="@dimen/_30sdp"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:id="@+id/silence_iv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90sdp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:elevation="@dimen/_20sdp"
                android:src="@drawable/stt_listener" />

            <RelativeLayout
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_80sdp"
                android:background="@drawable/ripple_rectangle_card">

                <com.pratham.foundation.customView.fontsview.SansTextViewBold
                    android:id="@+id/silence_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="I am listening..."
                    android:textColor="@color/red"
                    android:textSize="@dimen/_15sdp" />

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_monk"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:elevation="20dp"
        android:src="@drawable/monk_char" />

    <com.pratham.foundation.customView.fontsview.SansTextViewBold
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:gravity="center"
        android:text="Chat"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_title"
        android:layout_above="@+id/bottom_LL"
        android:orientation="vertical"
        android:weightSum="10">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_weight="8.3"
            android:background="@null"
            android:clipToPadding="false"
            android:paddingTop="10dp"
            android:paddingBottom="60dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1.7"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageButton
                android:id="@+id/btn_reading"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@drawable/button_green"
                android:layout_marginBottom="@dimen/_5sdp"
                android:elevation="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_mic_black" />

            <RelativeLayout
                android:id="@+id/lin_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_weight="7"
                android:background="@drawable/dialog_bg"
                android:elevation="2dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/clear"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_alignParentEnd="true"
                    android:scaleType="fitXY"
                    android:elevation="@dimen/_20sdp"
                    android:src="@drawable/broom_clean" />
                <ScrollView
                    android:id="@+id/scroll_ll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:fadeScrollbars="false"
                    android:scrollbarSize="6dp"
                    android:scrollbarThumbVertical="@drawable/card_color_bg4"
                    android:scrollbarTrackVertical="@drawable/scroll_bg">

                    <!-- <com.nex3z.flowlayout.FlowLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                         android:id="@+id/readChatFlow"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center"
                         app:flChildSpacing="10dp" />-->
                    <TextView
                        android:id="@+id/readchat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_13sdp" />
                </ScrollView>
            </RelativeLayout>

            <ImageButton
                android:id="@+id/btn_imgsend"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/button_green"
                android:elevation="2dp"
                android:scaleType="fitCenter"
                android:padding="5dp"
                android:src="@drawable/enter" />

            <!--  <ImageButton
                  android:id="@+id/btn_speaker"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1.5"
                  android:background="@drawable/button_yellow"
                  android:elevation="2dp"
                  android:padding="@dimen/_5sdp"
                  android:scaleType="fitCenter"
                  android:src="@drawable/ic_volume_up" />-->
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_LL"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <RelativeLayout
            android:id="@+id/rl_personA"
            android:layout_width="0dp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="3"
            android:layout_marginEnd="@dimen/_3sdp"
            android:gravity="center"
            android:background="@drawable/dialog_bg">

            <ImageView
                android:id="@+id/img1"
                android:layout_alignParentStart="true"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/robot" />

            <com.pratham.foundation.customView.fontsview.SansTextViewBold
                android:id="@+id/person_A"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:layout_toEndOf="@+id/img1"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="Person 1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/_10sdp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_personB"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            android:layout_weight="3"
            android:gravity="center"
            android:background="@drawable/dialog_bg">

            <ImageView
                android:id="@+id/img2"
                android:layout_alignParentStart="true"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/student" />

            <com.pratham.foundation.customView.fontsview.SansTextViewBold
                android:id="@+id/person_B"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:layout_toEndOf="@+id/img2"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="Person 2"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/_10sdp"/>

        </RelativeLayout>

        <com.pratham.foundation.customView.fontsview.SansButton
            android:id="@+id/btn_submit"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:text="@string/submit"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_weight="2"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/white"
            android:background="@drawable/button_green"/>

    </LinearLayout>

</RelativeLayout>