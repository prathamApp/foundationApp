<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_12sdp"
    android:layout_weight="1"
    android:background="@drawable/ripple_rectangle_card"
    android:elevation="@dimen/_3sdp"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/_12sdp">

    <com.pratham.foundation.customView.SansTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:text="Learning"
        android:textColor="@color/dark_yellow"
        android:textSize="@dimen/_20sdp" />

    <com.pratham.foundation.customView.progress_layout.ProgressLayout
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:elevation="5dp"
        android:maxHeight="15dp"
        android:minHeight="15dp"
        app:c_borderWidth="2dp"
        app:c_progress="0"
        app:c_progressColor="@color/convoRed"
        app:c_progressRadius="7dp" />

</LinearLayout>


