<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="@dimen/_240sdp"
        android:layout_height="@dimen/_190sdp"
        android:layout_centerInParent="true"
        android:background="@color/full_transparent">

        <ImageView
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/dialog_image_bg"
            android:elevation="5dp"
            android:padding="5dp"
            android:src="@drawable/pratham_logo" />

        <ImageButton
            android:id="@+id/dia_btn_cross"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:elevation="5dp"
            android:layout_marginTop="@dimen/_30sdp"
            android:padding="5dp"
            android:visibility="gone"
            android:background="@drawable/button_red"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_close_red" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_45sdp"
            android:layout_marginBottom="@dimen/_35sdp"
            android:background="@drawable/dialog_bg"
            android:gravity="center">

            <RatingBar
                android:id="@+id/dia_ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginVertical="@dimen/_10sdp"
                android:isIndicator="true"
                android:numStars="5"
                android:progressTint="@color/ratingFilled"
                android:stepSize="1"
                android:theme="@style/Widget.AppCompat.RatingBar"
                android:visibility="visible" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_5sdp"
            android:gravity="center"
            android:elevation="5dp">


            <com.pratham.foundation.customView.fontsview.SansButton
                android:id="@+id/dia_btn_yellow"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_toLeftOf="@id/dia_btn_green"
                android:background="@drawable/button_yellow"
                android:elevation="5dp"
                android:text="yellow"
                android:visibility="visible"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />

            <com.pratham.foundation.customView.fontsview.SansButton
                android:id="@+id/dia_btn_green"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="@drawable/button_green"
                android:elevation="5dp"
                android:text="green"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />

            <com.pratham.foundation.customView.fontsview.SansButton
                android:id="@+id/dia_btn_red"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_toRightOf="@id/dia_btn_green"
                android:background="@drawable/button_red"
                android:elevation="5dp"
                android:text="red"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />


        </RelativeLayout>

        <ImageButton
            android:id="@+id/exit_ib"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentRight="true"
            android:background="@color/full_transparent"
            android:padding="@dimen/_3sdp"
            android:scaleType="fitCenter"
            android:src="@drawable/credits_icon"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>